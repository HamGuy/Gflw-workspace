{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build and debug active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "/opt/homebrew/lib/libglfw.3.3.dylib", // 链接 glfw 库，非常重要
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-framework",
                "OpenGL", // 引入 OpenGL
                "-framework",
                "Cocoa",    
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",
                "-framework",
                "CoreFoundation",
                "-Wno-deprecated"              
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}